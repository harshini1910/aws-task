pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'dev', url: 'https://github.com/<your-username>/aws-task.git'
            }
        }

        stage('Terraform Init') {
            steps {
                sh '''
                    cd terraform
                    terraform init
                '''
            }
        }

        stage('Terraform Apply') {
            steps {
                sh '''
                    cd terraform
                    terraform apply -auto-approve
                '''
            }
        }

        stage('Deploy v1') {
            steps {
                sh '''
                    cd ansible
                    ansible-playbook -i hosts.yml playbook.yml -e "app_version=v1"
                '''
            }
        }
    }
}
